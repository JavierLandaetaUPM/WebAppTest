{{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/each}}

{{#if success_msg}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
    {{success_msg}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>New Comand</h3>
        </div>
    <div class="card-body">
        <form action="/commands" method="POST">
            <div class="form-group">
                <input type="text" name="command" class="form-control" placeholder="Command" autofocus>
            </div>
            <div class="btn-group btn-group-toggle btn-block" data-toggle="buttons">
                <label class="btn btn-secondary active">
                    <input type="radio" name="options" value="simulated" autocomplete="off" > Simulated
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="options" value="raspberry" autocomplete="off"> RaspBerryPi
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="options" value="stp" autocomplete="off"> ESP-32
                </label>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">
                    Send
                </button>
            </div>
        </form>
    </div>
    </div>
</div>